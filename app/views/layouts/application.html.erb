<!DOCTYPE html>
<html>
<head>
  <title>Ordering Demo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" , rel: 'stylesheet'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag Sync.adapter_javascript_url %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>

</head>
<body>

<%= render 'layouts/header' %>
<div class="container" id="yield">
  <% flash.each do |name,msg| %>
  	<%= content_tag(:div, msg, class: "alert alert-info") %>
  <% end %>
	<%= yield %>
</div>
<%= render 'layouts/footer' %>

</body>
</html>
