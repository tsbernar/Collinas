<div class="panel panel-default add-menu-item">
	<div class="panel-heading">
		<h1>Upload from csv</h1>
	</div>
	<div class= "panel-body">
		<%= form_tag import_menu_items_path, multipart: true do %>
			<div class="field form-group">
				<%= file_field_tag :file %>
			</div>
			<div class="actions form-group">
				<%= submit_tag "Upload" , class: "btn btn-primary" %>
			</div>	
		<% end %>
		<p>Tip: ensure that headers and menu section names are spelled correctly. Existing items with identical names will be overwritten.</p>
		<p>Download csv template file</p>
	</div>
	<div class="panel-footer">
  	<%= link_to 'Back', menu_items_path %>
  </div>
</div>