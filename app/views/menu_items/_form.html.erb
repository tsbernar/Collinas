<%= form_for(@menu_item) do |f| %>
  <% if @menu_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
      <% @menu_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control"%>  
  </div>
  <div class="field form-group"> 
    <%= f.label :section %>
    <%= f.select :section,  options_for_section, {} , prompt: 'Select One' , class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control"%>  
  </div>

  <div class="field form-group">
    <%= f.label "#{:price}" %>
    $ <%=f.text_field :price, data: { role: 'money', a_sep: ',', a_dec: '.' } %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Add item", class: "btn btn-primary" %>
  </div>
  <% end %>


