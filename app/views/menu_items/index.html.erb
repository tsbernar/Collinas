
<%= link_to 'New Menu item', new_menu_item_path if current_user && @user.admin %>

<h1>Listing Menu Items</h1>

<table class="table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_sections.each do |section_item| %>
      <tr class="menu-heading warning">
        <td colspan="6"><h4><%=section_item.name%></h4></td>
      </tr>
      <% @menu_items.each do |menu_item| %>
        <% if menu_item.section == section_item.name %>
          <tr>
            <td><%= menu_item.name%></td>
            <td><%= menu_item.description%></td>
            <td><%= number_to_currency(menu_item.price, :unit => "$")%></td>
            <% if user_signed_in? && @user.admin %>
              <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
              <td><%= link_to 'Delete', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>


