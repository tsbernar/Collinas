<h1>Cart</h1>
cart id: <%= @cart.id %>
<% @cart_items = @cart.cart_items %>
<table class="table">
	<thead>
		<tr>
			<th> ID </th>
			<th> Name </th>
			<th> CartId </th>
			<th> MenuItemId </th>
			<th> Name </th>
			<th> Qty </th>
			<th> Price </th>
		</tr>
	</thead>
	<tbody>
		<%= @cart_items.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.name %></td>
				<td><%= item.cart_id %></td>
				<% menu_item = MenuItem.find(item.menu_item_id) %>
				<td><%= item.menu_item_id %></td>
				<td><%= menu_item.name %></td>
				<td><%= item.qty %></td>
				<td><%= number_to_currency(menu_item.price, unit: '$') %></td>
			</tr>
		<% end %>
	</tbody>
</table>

